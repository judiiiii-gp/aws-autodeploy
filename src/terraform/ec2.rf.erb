resource "aws_instance" "<%= ec2_name %>" {
  ami           = "<%= ec2_ami %>"
  instance_type = "<%= ec2_instance_type %>"
  tags = {
    Name = "<%= ec2_name %>"
    Tags = "<%= ec2_tags %>"
  }
}

output "instance_name_<%= ec2_name %>" {
  value = aws_instance.<%= ec2_name %>.tags.Name
}

output "instance_id_<%= ec2_name %>" {
  value = aws_instance.<%= ec2_name %>.id
}

output "instance_type_<%= ec2_name %>" {
  value = aws_instance.<%= ec2_name %>.instance_type
}

output "public_ip_<%= ec2_name %>" {
  value = aws_instance.<%= ec2_name %>.public_ip
}